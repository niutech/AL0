<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/dialog">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView style="@style/dialog_scroll_wrapper">
            <TextView
                android:id="@+id/dialog_text"
                style="@style/dialog_text"
                android:text="Title" />
        </ScrollView>
        <RelativeLayout
            style="@style/activity_menu_footer_wrapper">
            <LinearLayout
                style="@style/activity_menu_footer_line">
            <computer.fuji.al0.components.Button
                android:id="@+id/dialog_button_action_left"
                style="@style/button_fill" />
            <View style="@style/activity_menu_footer_spacer_small" />
            <computer.fuji.al0.components.Button
                android:id="@+id/dialog_button_action_right"
                style="@style/dialog_button_action_right" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>