<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        style="@style/fill_until_footer"
        android:orientation="vertical"
        android:gravity="center">
        <computer.fuji.al0.components.TextInput
            android:id="@+id/clock_set_alarm_activity_text_input"
            style="@style/text_input_centered"
            android:ellipsize="start"
            android:singleLine="true"/>
        <View style="@style/spacer" />
        <computer.fuji.al0.components.Numpad
            android:id="@+id/clock_set_alarm_activity_numpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            />

    </LinearLayout>
    <LinearLayout style="@style/activity_menu_footer_wrapper">
        <LinearLayout style="@style/activity_menu_footer_line">
            <computer.fuji.al0.components.Button
                style="@style/button_back"
                android:id="@+id/clock_set_alarm_activity_button_cancel"
                android:text="@string/close_contestual_symbol" />
            <View style="@style/activity_menu_footer_spacer_small"/>
            <computer.fuji.al0.components.Button
                style="@style/button_fill"
                android:id="@+id/clock_set_alarm_activity_button_set"
                android:text="@string/clock_set_alarm_activity_button_set" />
            <View style="@style/activity_menu_footer_spacer_small"/>
            <computer.fuji.al0.components.Button
                style="@style/button_single_char_wide"
                android:id="@+id/clock_set_alarm_activity_button_delete"
                android:text="@string/clock_set_alarm_activity_button_delete" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
