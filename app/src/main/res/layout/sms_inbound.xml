<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/sms_inbound_wrapper">
    <LinearLayout
        style="@style/sms_header" >
        <TextView
            style="@style/sms_inbound_time"
            android:id="@+id/date"
            android:text="Monday, 11:23 pm"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/info_divider"
            style="@style/sms_inbound_info"
