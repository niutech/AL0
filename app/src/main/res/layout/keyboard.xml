<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/keyboard_wrapper">
    <LinearLayout style="@style/keyboard_lines">
        <LinearLayout
            android:id="@+id/keyboard_line_controls"
            style="@style/keyboard_line">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keyboard_line_upper"
            style="@style/keyboard_line">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keyboard_line_middle"
            style="@style/keyboard_line">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keyboard_line_lower"
            style="@style/keyboard_line">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout style="@style/activity_menu_footer_wrapper">
        <LinearLayout style="@style/activity_menu_footer_line">
            <computer.fuji.al0.components.Button
                style="@style/button_back"
                android:id="@+id/keyboard_close_button"
                android:text="@string/close_symbol" />
            <computer.fuji.al0.components.Spacer
                style="@style/activity_menu_footer_spacer_small" />
            <computer.fuji.al0.components.Button
                android:id="@+id/keyboard_left_button"
                style="@style/button"
                android:text="@string/keyboard_button_left_numbers"/>
            <computer.fuji.al0.components.Spacer
                style="@style/activity_menu_footer_spacer_small" />
            <computer.fuji.al0.components.Button
                android:id="@+id/keyboard_center_button"
                style="@style/button_fill"
                android:text="@string/keyboard_button_center_space"/>
            <computer.fuji.al0.components.Spacer
                style="@style/activity_menu_footer_spacer_small" />
            <computer.fuji.al0.components.Button
                android:id="@+id/keyboard_right_button"
                style="@style/button" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>